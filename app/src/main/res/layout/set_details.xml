<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.SetDetailsActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/article_name_item"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_margin"
                    style="@style/TitleTextStyle"
                    />

                <include
                    android:id="@+id/stats_head"
                    layout="@layout/stats_armor" />

                <include
                    android:id="@+id/stats_chest"
                    layout="@layout/stats_armor" />

                <include
                    android:id="@+id/stats_gloves"
                    layout="@layout/stats_armor" />

                <include
                    android:id="@+id/stats_waist"
                    layout="@layout/stats_armor" />

                <include
                    android:id="@+id/stats_legs"
                    layout="@layout/stats_armor" />

                <include
                    android:id="@+id/stats_weapon"
                    layout="@layout/stats_weapon" />


            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
